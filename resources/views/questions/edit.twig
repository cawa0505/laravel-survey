{% extends '../layouts/app.twig' %}

{% block content %}

    <div class="container">

        <div class="panel panel-default">

            <div class="panel-heading">
                <h3 class="panel-title">Edit this question</h3>
            </div>

            <div class="panel-body">

                {{ form_open({route: ['admin.surveys.groups.questions.update', survey.id, group.id, question.id]}) }}

            	    <input type="hidden" name="_method" value="PATCH">

                    <div class="form-group{{ errors.has('type') ? ' has-error' : '' }}">
                        <label for="type">Type:</label>
                        <input class="form-control" name="type" value="{{ question.type }}">
                        {% if errors.has('type') %}
                            <span class="help-block">
                                <strong>{{ errors.first('type') }}</strong>
                            </span>
                        {% endif %}
                    </div>

                    <div class="form-group{{ errors.has('text') ? ' has-error' : '' }}">
                        <label for="text">Text:</label>
                        <textarea class="form-control" rows="5" name="text">{{ question.text }}</textarea>
                        {% if errors.has('text') %}
                            <span class="help-block">
                                <strong>{{ errors.first('text') }}</strong>
                            </span>
                        {% endif %}
                    </div>

                    <div class="form-group{{ errors.has('small_text') ? ' has-error' : '' }}">
                        <label for="small_text">Small text:</label>
                        <textarea class="form-control" rows="3" name="small_text">{{ question.small_text }}</textarea>
                        {% if errors.has('small_text') %}
                            <span class="help-block">
                                <strong>{{ errors.first('small_text') }}</strong>
                            </span>
                        {% endif %}
                    </div>

                    <div class="form-group{{ errors.has('order') ? ' has-error' : '' }}">
                        <label>Order</label>
                        <input class="form-control" name="order" value="{{ question.order }}">
                        {% if errors.has('order') %}
                            <span class="help-block">
                                <strong>{{ errors.first('order') }}</strong>
                            </span>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        <label>Mandatory</label>
                        <div class="radio">
                            <label>
                                <input type="checkbox" value="1" name="mandatory" {% if question.mandatory %}checked="checked"{% endif %}> Yes
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>

                {{ form_close() }}
            </div>
        </div>
    </div>

{% endblock %}