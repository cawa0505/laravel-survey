{% extends '../templates/default.twig' %}

{% block content %}

	{% for question in questions %}
        <h1>{{ question.text }}</h1>
	    <h2>{{ question.small_text }}</h2>

	    <p>{{ question.type }}</p>

	    <a class="btn btn-small btn-success" href="/admin/surveys/{{ survey.id }}/groups/{{ group.id }}/questions/{{ question.id }}">Show</a>
        <a class="btn btn-small btn-info" href="/admin/surveys/{{ survey.id }}/groups/{{ group.id }}/questions/{{ question.id }}/edit">Edit</a>

	    <hr>
    {% endfor %}

{% endblock %}