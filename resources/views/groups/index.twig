{% extends '../layouts/app.twig' %}

{% block content %}

	{% for group in groups %}
        <h1>{{ group.text }}</h1>
	    <h2>{{ group.small_text }}</h2>

	    <p>{{ group.slug }}</p>

	    <a class="btn btn-small btn-success" href="/admin/surveys/{{ survey.id }}/groups/{{ group.id }}">Show</a>
        <a class="btn btn-small btn-info" href="/admin/surveys/{{ survey.id }}/groups/{{ group.id }}/edit">Edit</a>

	    <hr>
    {% endfor %}

{% endblock %}